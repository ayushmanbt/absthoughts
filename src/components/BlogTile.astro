---
let {title, description, date, url} = Astro.props;
date = new Date(date).toLocaleString("en-US", {
    weekday: "long",
    year: "numeric",
    month: "short",
    day: "numeric"
})
---

<a href={url} class="
            p-4 
            rounded-md 
            min-w-[100px] 
            bg-gray-200
            text-black
            transition-all
            hover:bg-gray-700
            hover:text-white
            dark:bg-gray-700
            dark:text-white
            dark:hover:bg-gray-200
            dark:hover:text-black
            cursor-pointer
        ">
    <p class="text-xs mb-2">{date}</p>
    <h3 class="text-xl mb-2 font-bold">{title}</h3>
    <p>{description}</p>
</a>


